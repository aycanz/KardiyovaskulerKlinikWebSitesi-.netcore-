@using EntityLayer.Concrete
@model List<Appointment>
@{
    Layout = null;
}

<link rel="stylesheet" href="/KVH/css/LabPanel.css">

  <div class="container">
        <h2>Bugünkü Sonuçlar</h2>
        
        @if (Model.Count > 0) {
            <table class="appointments-table">
                <thead>
                    <tr>
                        <th style="width: 35%;">Hasta</th>
                        <th style="width: 40%;">Saat</th>
                        <th style="width: 25%;">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="patient-name">@item.Patient.FirstName @item.Patient.LastName</td>
                            <td class="appointment-time">@item.Date.ToString("dd MMMM yyyy"), @(DateTime.Today.Add(item.Time).ToString("HH:mm"))</td>
                            <td>
                                <a href="@Url.Action("Index", "HeartDisease", new { appointmentId = item.AppointmentId })" class="btn-primary">Sonuç Gir</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        } else {
            <div class="no-appointments">
                Bugün için randevu bulunmamaktadır.
            </div>
        }
    </div>