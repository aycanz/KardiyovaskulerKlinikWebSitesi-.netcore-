@using KVH.Models.ViewModels
@model KVH.Models.ViewModels.HeartInputModel
@{
    Layout = null;
}


<h2>Heart Disease Prediction</h2>

<form asp-action="Predict" method="post">
    <div>
        <label>Age</label>
        <input asp-for="Age" type="number" required />
    </div>
    <div>
        <label>Sex</label>
        <select asp-for="Sex">
            <option value="M">Male</option>
            <option value="F">Female</option>
        </select>
    </div>
    <div>
        <label>Chest Pain Type</label>
        <select asp-for="ChestPainType">
            <option value="TA">Typical Angina</option>
            <option value="ATA">Atypical Angina</option>
            <option value="NAP">Non-Anginal Pain</option>
            <option value="ASY">Asymptomatic</option>
        </select>
    </div>
    <div>
        <label>Resting BP</label>
        <input asp-for="RestingBP" type="number" />
    </div>
    <div>
        <label>Cholesterol</label>
        <input asp-for="Cholesterol" type="number" />
    </div>
    <div>
        <label>FastingBS</label>
        <select asp-for="FastingBS">
            <option value="1">Yes ( > 120 )</option>
            <option value="0">No ( ≤ 120 )</option>
        </select>
    </div>
    <div>
        <label>Resting ECG</label>
        <select asp-for="RestingECG">
            <option value="Normal">Normal</option>
            <option value="ST">ST</option>
            <option value="LVH">LVH</option>
        </select>
    </div>
    <div>
        <label>Max HR</label>
        <input asp-for="MaxHR" type="number" />
    </div>
    <div>
        <label>Exercise Angina</label>
        <select asp-for="ExerciseAngina">
            <option value="Y">Yes</option>
            <option value="N">No</option>
        </select>
    </div>
    <div>
        <label>Oldpeak</label>
        <input asp-for="Oldpeak" type="number" step="0.1" />
    </div>
    <div>
        <label>ST Slope</label>
        <select asp-for="ST_Slope">
            <option value="Up">Up</option>
            <option value="Flat">Flat</option>
            <option value="Down">Down</option>
        </select>
    </div>
    <button type="submit">Tahmin Et</button>
</form>

@if (ViewBag.Result != null)
{
    <h3>Prediction Result: <strong>@ViewBag.Result</strong></h3>
}

