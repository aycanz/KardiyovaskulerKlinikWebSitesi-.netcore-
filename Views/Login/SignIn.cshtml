@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Giriş Yap</title>
    <link rel="stylesheet" href="/KVH/css/SingIn.css">

</head>
<body>
    <div class="split-container">
        <!-- Sol taraf - Hoşgeldiniz bölümü -->
        <div class="welcome-side">
            <div class="welcome-logo">
                <ion-icon name="person"></ion-icon>
            </div>
            <h1>Hoş Geldiniz</h1>
            <p>Kliniğimize hoş geldiniz. Hesabınıza erişmek için lütfen kimlik bilgileriniz ile giriş yapınız.</p>
        </div>

        <!-- Sağ taraf - Giriş formu -->
        <div class="login-side">
            <div class="login-box">
                <form method="post">
                    <h2>Giriş Yap</h2>
                    <div class="input-box">
                        <span class="icon">
                            <ion-icon name="id-card-outline"></ion-icon>
                        </span>
                        <input type="text" name="TcNo" required>
                        <label>T.C. Kimlik No</label>
                    </div>
                    <div class="input-box">
                        <span class="icon">
                            <ion-icon name="lock-closed-outline"></ion-icon>
                        </span>
                        <input type="password" name="Password" required>
                        <label>Şifre</label>
                    </div>
                
                    <div class="forgot">
                        <a href="/kaydol/">Hesabınız Yok Mu? Kayıt Olun</a>
                    </div>
                    <button type="submit">Giriş Yap</button>
                </form>
                @if (!string.IsNullOrEmpty(ViewBag.Message))
                {
                    <p style="color: red; margin-top: 15px; text-align: center;">@ViewBag.Message</p>
                }
            </div>
        </div>
    </div>
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
</body>
</html>